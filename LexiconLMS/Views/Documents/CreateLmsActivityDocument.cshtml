<h1>CreateLmsActivityDocument</h1>



@model LexiconLMS.Models.Document

@{
    ViewData["Title"] = "CreateLmsActivityDocument";
}


@*<h1>CreateLmsActivityDocument</h1>*@
@*<h2>Create Course Document</h2> <h3>in LmsActivity: @ViewBag.LmsActivityName</h3>*@
<h3>Skapa dokument i aktivitet: @Model.LmsActivity.Name</h3>
@*<h3>i aktivitet: @Model.LmsActivity.Name</h3>
<h3>för användare: @Model.ApplicationUser.Name</h3>*@

<div class="text-danger">
    @TempData["FailText"]
</div>
<div class="text-success">
    @TempData["SuccessText"]
</div>

<h3>Document</h3>
<hr />
<div class="row">
    <div class="col-md-4">




        <form asp-action="CreateLmsActivityDocument" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CreatedDate" />

            </div>

            <div class="form-group">
                <input type="hidden" asp-for="ApplicationUserId" />

            </div>
            <div class="form-group">

                <input type="hidden" asp-for="LmsActivityId" />
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Ladda upp en eller flera dokument:</p>
                    <input type="file" name="document.MyUploadedFile" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Ladda upp dokument" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
    <a asp-action="LmsActivityDocuments" asp-route-lmsActivityId="@Model.LmsActivityId" class="badge badge-primary">Tillbaka till aktivitetsdokument</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






