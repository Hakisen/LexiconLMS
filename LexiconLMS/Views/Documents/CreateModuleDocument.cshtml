<h1>CreateModuleDocument</h1>

@model LexiconLMS.Models.Document
@{
    ViewData["Title"] = "CreateModuleDocument";
}

<h1>CreateModuleDocument</h1>
@*<h2>Create Course Document</h2> <h3>in Module: @ViewBag.ModuleName</h3>*@
<h2>Skapa moduldokument</h2>
<h3>i modul: @Model.Module.Name</h3>
<h3>för användare: @Model.ApplicationUser.Name</h3>

<div class="text-danger">
    @TempData["FailText"]
</div>
<div class="text-success">
    @TempData["SuccessText"]
</div>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">




        <form asp-action="CreateModuleDocument" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CreatedDate" />

            </div>

            <div class="form-group">
                <input type="hidden" asp-for="ApplicationUserId" />

            </div>
            <div class="form-group">

                <input type="hidden" asp-for="ModuleId" />
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="document.MyUploadedFile" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload document" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
    <a asp-action="ModuleDocuments" asp-route-moduleId="@Model.ModuleId">Tillbaka till moduldokument</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




