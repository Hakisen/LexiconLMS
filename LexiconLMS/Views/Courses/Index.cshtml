@model IEnumerable<LexiconLMS.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Kurser</h1>

<p>
    <a asp-action="Create">Skapa ny kurs</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

        </tr>
    </thead>
    <tbody>

        @if (User.IsInRole("Teacher"))
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Mer info</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Ta bort</a> |
                        <a asp-controller="Modules" asp-action="CourseModules" asp-route-courseId="@item.Id">Moduler</a> |
                        <a asp-controller="Documents" asp-action="CourseDocuments" asp-route-courseId="@item.Id">Dokument</a> |
                        <a asp-area="Identity" asp-page="/Account/Register" asp-route-courseId="@item.Id">Lägg till elev</a>
                        <a asp-action="StudentsPerCourse" asp-route-id="@item.Id">Lista Elever</a>
                    </td>
                    <td>

                </tr>
            }
        }

        
        
    </tbody>
</table>
