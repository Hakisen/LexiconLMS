@model IEnumerable<LexiconLMS.Models.LmsTask>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherFeedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadyState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LmsActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherFeedback)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadyState.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LmsActivity.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
