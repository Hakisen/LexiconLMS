@model IEnumerable<LexiconLMS.Models.Module>

@{
    ViewData["Title"] = "CourseModules";
}

<h2>Kursmoduler</h2> <h3>i kurs @ViewBag.CourseName</h3>
<div class="text-success">
    @TempData["SuccessText"]
</div>
<p>
    <a asp-action="CreateCourseModule" asp-route-courseId="@ViewBag.CourseId">Skapa ny kursmodul</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                @if (User.IsInRole("Teacher"))
                {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @*<a asp-controller="LMSActivities" asp-action="ModulesActivities" asp-route-moduleId="@item.Id">Activities</a> | Activities controller*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                }
                @if (User.IsInRole("Student"))
                {
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @*<a asp-controller="LMSActivities" asp-action="ModulesActivities" asp-route-moduleId="@item.Id">Activities</a> | Activities controller*@
                </td>
                }
            </tr>
        }
    </tbody>
</table>
<div>
    @*<a asp-action="CourseModules" asp-route-id="@model">Back to List</a>*@
</div>
